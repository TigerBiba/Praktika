<Page x:Class="Praktika.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage" WindowHeight="450" WindowWidth="800">

    <Grid>
        <Button x:Name="btnOpenFile" Content="Выбрать файл" HorizontalAlignment="Left" Margin="339,54,0,0" Width="122" Click="btnOpenFile_Click"  Height="34" VerticalAlignment="Top"/>
        <Label x:Name="lbFilename" Content="Файл: " HorizontalAlignment="Left" Margin="339,93,0,0" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="btnRender" Content="Отредактировать" HorizontalAlignment="Left" Margin="339,244,0,0" Width="122" Click="btnRender_Click"  Height="34" VerticalAlignment="Top"/>
        <TextBox x:Name="tbProtocolNumber" HorizontalAlignment="Left" Margin="340,155,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Введите номер протокола" HorizontalAlignment="Left" Margin="339,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.07,-0.331"/>
        <TextBox x:Name="tbModelName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="340,209,0,0"/>
        <Label Content="Введите номер модели" HorizontalAlignment="Left" Margin="339,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.07,-0.331"/>

        <Grid HorizontalAlignment="Left" Width="210">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Viewbox Grid.Column="0" Grid.Row="0">
                <Image Source="/Resources/logo.png"/>
            </Viewbox>
            
            <TextBlock Grid.Column="1" Grid.Row="0" FontSize="18" VerticalAlignment="Bottom" HorizontalAlignment="Left" TextWrapping="Wrap" Text="СибНИА им С. А. Чаплыгина"/>

            <Image Source="/Resources/Converter_icon.png" Grid.Column="0" Grid.Row="1" />
            <Button x:Name="ConverterPage" Grid.Column="1" Grid.Row="1" FontSize="18">
                <TextBlock TextWrapping="Wrap"  Text="Преобразование протокола" FontSize="14"/>
            </Button>

            <Image Source="/Resources/interpolation_icon.png"  Grid.Column="0" Grid.Row="2" Margin="5"/>
            <Button x:Name="btnInterpol" Content="Интерполяция" Click="btnInterpol_Click" Grid.Column="1" Grid.Row="2" FontSize="14"/>

            <Image Source="/Resources/protocol_icon.png"  Grid.Column="0" Grid.Row="3" Margin="5"/>
            <Button x:Name="btnInterpolSender" Click="btnInterpolSender_Click" Grid.Column="1" Grid.Row="3" FontSize="18">
                <TextBlock TextWrapping="Wrap" Text="Итоговый протокол" FontSize="14"/>
            </Button>
        </Grid>
    </Grid>
</Page>