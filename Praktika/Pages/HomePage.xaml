<Page x:Class="Praktika.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Button x:Name="btnOpenFile" Content="Выбрать файл" HorizontalAlignment="Center" Margin="0,72,0,0" Width="122" Click="btnOpenFile_Click"  Height="34" VerticalAlignment="Top"/>
        <Label x:Name="lbFilename" Content="Файл: " HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="btnRender" Content="Отредактировать" HorizontalAlignment="Center" Margin="0,262,0,0" Width="122" Click="btnRender_Click"  Height="34" VerticalAlignment="Top"/>
        <TextBox x:Name="tbProtocolNumber" HorizontalAlignment="Center" Margin="0,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Введите номер протокола" HorizontalAlignment="Left" Margin="340,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.07,-0.331"/>
        <TextBox x:Name="tbModelName" HorizontalAlignment="Center" Margin="0,214,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Введите номер модели" HorizontalAlignment="Left" Margin="339,188,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.07,-0.331"/>
        <Button x:Name="btnInterpol" Content="Интерполяция" HorizontalAlignment="Center" Margin="0,311,0,0" Width="122" Click="btnInterpol_Click"  Height="34" VerticalAlignment="Top"/>
    </Grid>
</Page>