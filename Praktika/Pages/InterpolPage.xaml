<Page x:Class="Praktika.Pages.InterpolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterpolPage">

    <Grid>
        <Button x:Name="btnOpenFile" Content="Выбрать файл" HorizontalAlignment="Center" Margin="0,51,0,0" Click="btnOpenFile_Click" VerticalAlignment="Top" Height="30" Width="120"/>
        <Label x:Name="lbFilename" Content="Файл: " HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top" Width="122"/>
        <Label Content="Введите желаемое значение интерполяции" HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" Width="251"/>
        <Label Content="1)" HorizontalAlignment="Left" Margin="339,169,0,0" VerticalAlignment="Top" Width="29"/>
        <Label Content="2)" HorizontalAlignment="Left" Margin="339,200,0,0" VerticalAlignment="Top" Width="29"/>
        <Label Content="3)" HorizontalAlignment="Left" Margin="339,231,0,0" VerticalAlignment="Top" Width="29"/>
        <Label Content="4)" HorizontalAlignment="Left" Margin="339,262,0,0" VerticalAlignment="Top" Width="29"/>
        <Label Content="5)" HorizontalAlignment="Left" Margin="339,293,0,0" VerticalAlignment="Top" Width="29"/>
        <Label Content="6)" HorizontalAlignment="Left" Margin="339,324,0,0" VerticalAlignment="Top" Width="29"/>
        <TextBox x:Name="tbFirstX2" HorizontalAlignment="Left" Margin="373,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbSecondX2" HorizontalAlignment="Left" Margin="373,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbThirdX2" HorizontalAlignment="Left" Margin="373,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbFourthX2" HorizontalAlignment="Left" Margin="373,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbFifthX2" HorizontalAlignment="Left" Margin="373,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbSixthX2" HorizontalAlignment="Left" Margin="373,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnInterpol" Content="Выбрать файл" HorizontalAlignment="Center" Margin="0,371,0,0" Click="btnInterpol_Click"  VerticalAlignment="Top" Height="30" Width="120"/>
    </Grid>
</Page>
