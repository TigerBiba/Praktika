<Page x:Class="Praktika.Pages.InterpolSenderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterpolSenderPage">

    <Grid>
        <Label Content="Выберите файлы для выборки" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEnterFiles" Content="Выбрать файлы" HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.297,-0.548" Height="27" Width="96" Click="btnEnterFiles_Click"/>
        <TextBlock x:Name="tbFilesNames" HorizontalAlignment="Left" Margin="311,101,0,0" TextWrapping="Wrap" Text="Выбранные файлы: " VerticalAlignment="Top"/>
        <Button x:Name="btnInterpolSender" Content="Сделать выборку" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.297,-0.548" Height="27" Width="96" Click="btnInterpolSender_Click"/>

    </Grid>
</Page>
